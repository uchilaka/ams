<% content_for :centered_form_layout do %>
  <h3 class="mb-4">Log in</h3>
  <%= render "devise/shared/omniauth/links" %>
  <%= link_to "Sign in via Email", user_session_path, class: "btn block w-full mb-4" %>
  <%= render "shared/separator-with-text", content: "OR" %>
  <%= form_for(
        resource,
        as: resource_name,
        url: user_fallback_session_path,
        html: { class: "space-y-6" }
      ) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="field">
      <%= f.submit "Log in", class: "btn btn-primary block w-full" %>
    </div>
  <% end %>
  <hr class="my-5">
  <%= render "users/shared/links" %>
<% end %>
<%= render "users/shared/centered-form-layout" %>
