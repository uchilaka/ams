<div id="<%= dom_id account %>" class="bg-white p-6 shadow-sm rounded overflow-hidden">
  <p class="my-5">
    <strong class="block font-bold mb-1" aria-label="Business name">
      <%= account.display_name %>
    </strong>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this account", account, class: "btn btn-primary" %>
    <%= link_to 'Edit this account', edit_account_path(account), class: "btn btn-secondary" %>
    <hr class="mt-6">
  <% end %>
</div>
