<%= form_with(model: product) do |form| %>
<%= render "shared/error_messages", resource: form.object %>

  <div class="my-5">
    <%= form.label :sku %>
    <%= form.text_field :sku, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :display_name %>
    <%= form.text_field :display_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :vendor %>
    <%= form.collection_select :vendor_id, @vendors,
                               :id, :display_name,
                               { include_blank: "(Select a vendor)" },
                               class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.rich_text_area :description, rows: 5, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: alt_primary_btn_classes %>
  </div>
<% end %>
